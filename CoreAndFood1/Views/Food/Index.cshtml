
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model IPagedList<CoreAndFood1.Data.Model.Food>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Food List</h2>
<br />
<table class="table table-striped table-dark">

    <tr>

        <th>ID</th>
        <th>Food Name</th>
        <th>Price($)</th>
        <th>Stock(kg)</th>
        <th>Category Name</th>

        <th>Delete</th>
        <th>Update</th>
        <th>Details</th>

    </tr>
    @foreach (var x in Model)
    {


        <tr>



            <td>@x.FoodID</td>
            <td>@x.FoodName</td>
            <td>@x.Price</td>
            <td>@x.Stock</td>
            <td>@x.Category.CategoryName</td>

            <td><a href="/Food/DeleteFood/@x.FoodID" class="btn btn-danger" type="button" style="background-color:red">Delete</a></td>
            <td><a href="/Food/GetFood/@x.FoodID" class="btn btn-danger" type="button" style="background-color:dodgerblue">Update</a></td>
            <td><a href="#" class="btn btn-info" type="button" style="background-color:rebeccapurple">Details</a></td>
        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new{page}))
<a href="/Food/AddFood/" class="btn btn-primary">Food Add</a>
