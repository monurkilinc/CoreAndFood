@model CoreAndFood1.Data.Model.Food
@{
    ViewData["Title"] = "GetFood";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Food Add Page</h2>

@using (Html.BeginForm("UpdateFood", "Food", FormMethod.Post))
{
    @Html.LabelFor(x=>x.FoodID)
    @Html.TextBoxFor(x=>x.FoodID,new{@class="form-control"})

    <br />
    @Html.LabelFor(x=>x.FoodName)
    @Html.TextBoxFor(x=>x.FoodName,new{@class="form-control"})

    <br />
    @Html.LabelFor(x=>x.Stock)
    @Html.TextBoxFor(x=>x.Stock,new{@class="form-control"})

    <br />
    @Html.LabelFor(x=>x.Price)
    @Html.TextBoxFor(x=>x.Price,new{@class="form-control"})

    <br />
    @Html.LabelFor(x=>x.ImageURL)
    @Html.TextBoxFor(x=>x.ImageURL,new{@class="form-control"})
    <br />

    @Html.LabelFor(x=>x.Category)
    
    @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.v1,new{@class="form-control"})
    <br />

    @Html.LabelFor(x=>x.Description)
    @Html.TextAreaFor(x=>x.Description,new{@class="form-control"})
    <br />

    <button class="btn btn-primary" style="background-color:dodgerblue">Save</button>
}